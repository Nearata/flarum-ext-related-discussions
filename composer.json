{
    "name": "nearata/flarum-ext-related-discussions",
    "description": "Shows related discussions.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "Unlicense",
    "require": {
        "php": "^8.0",
        "flarum/core": "^1.7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.5.0"
    },
    "authors": [
        {
            "name": "Nearata",
            "email": "nearata@protonmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nearata\\RelatedDiscussions\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Related Discussions",
            "category": "feature",
            "icon": {
                "name": "far fa-comments",
                "color": "#fff",
                "backgroundColor": "#000"
            }
        }
    },
    "scripts": {
        "format": "pint src"
    }
}
